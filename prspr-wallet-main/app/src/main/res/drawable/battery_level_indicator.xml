<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@android:id/background">
    <color android:color="@color/float_transparent" />
</item>
<item android:id="@android:id/progress">
    <clip
        android:clipOrientation="vertical"
        android:gravity="bottom">
        <shape>
            <gradient
                android:startColor="@color/mifi_bar_start_color"
                android:centerColor="@color/mifi_bar_start_color"
                android:endColor="@color/mifi_bar_end_color"
                android:angle="90" />
        </shape>
    </clip>
</item>
</layer-list>